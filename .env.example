# DevGuard Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Core Configuration
# =============================================================================

# Data directory for DevGuard storage
DEV_GUARD_DATA_DIR=./data

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DEV_GUARD_LOG_LEVEL=INFO

# Enable debug mode
DEV_GUARD_DEBUG=false

# Configuration file path (optional, defaults to config/config.yaml)
DEV_GUARD_CONFIG=config/config.yaml

# Swarm execution interval in seconds
DEV_GUARD_SWARM_INTERVAL=30.0

# Maximum concurrent agents
DEV_GUARD_MAX_CONCURRENT_AGENTS=5

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (SQLite or PostgreSQL)
DATABASE_URL=sqlite:///./data/dev_guard.db

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/dev_guard

# =============================================================================
# Vector Database Configuration
# =============================================================================

# ChromaDB Configuration (default)
CHROMA_PATH=./data/vector_db

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=dev-guard-knowledge

# Weaviate Configuration (if using Weaviate)
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_URL=https://your-cluster.weaviate.network

# =============================================================================
# Notification Configuration
# =============================================================================

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Slack Webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient1@example.com,recipient2@example.com

# =============================================================================
# Agent Custom Instructions
# =============================================================================

# Commander Agent
COMMANDER_CUSTOM_INSTRUCTIONS="Focus on system health and user communication. Prioritize critical issues and maintain clear status reporting."

# Planner Agent
PLANNER_CUSTOM_INSTRUCTIONS="Break down complex tasks into manageable subtasks. Consider dependencies and resource constraints."

# Code Agent
CODE_CUSTOM_INSTRUCTIONS="Always follow PEP 8 style guidelines and include comprehensive docstrings. Focus on clean, maintainable code."

# QA/Test Agent
QA_TEST_CUSTOM_INSTRUCTIONS="Focus on edge cases and ensure comprehensive test coverage. Prioritize security and performance testing."

# Docs Agent
DOCS_CUSTOM_INSTRUCTIONS="Maintain clear, concise documentation. Keep README files and API docs up to date with code changes."

# Git Watcher Agent
GIT_WATCHER_CUSTOM_INSTRUCTIONS="Monitor for meaningful changes and ignore noise. Focus on files that impact functionality."

# Impact Mapper Agent
IMPACT_MAPPER_CUSTOM_INSTRUCTIONS="Analyze cross-repository dependencies carefully. Consider both direct and indirect impacts."

# Repo Auditor Agent
REPO_AUDITOR_CUSTOM_INSTRUCTIONS="Focus on important files and maintain clean vector database. Prioritize code files over generated content."

# Dependency Manager Agent
DEP_MANAGER_CUSTOM_INSTRUCTIONS="Prioritize security updates and maintain compatibility. Test thoroughly before applying updates."

# Red Team Agent
RED_TEAM_CUSTOM_INSTRUCTIONS="Focus on OWASP Top 10 and common vulnerability patterns. Provide actionable remediation guidance."

# =============================================================================
# Security Configuration
# =============================================================================

# Enable security scanning
ENABLE_SECURITY_SCANNING=true

# Security scan interval in seconds (default: 1 hour)
SECURITY_SCAN_INTERVAL=3600

# =============================================================================
# Performance Configuration
# =============================================================================

# Memory limit in MB
MEMORY_LIMIT_MB=2048

# CPU limit percentage
CPU_LIMIT_PERCENT=80

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development mode features
DEV_MODE=false

# Mock external services for testing
MOCK_EXTERNAL_SERVICES=false

# Test database URL (for testing)
TEST_DATABASE_URL=sqlite:///:memory:

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Enable audit trail
ENABLE_AUDIT_TRAIL=true

# Audit retention in days
AUDIT_RETENTION_DAYS=30

# Log file path (optional)
LOG_FILE_PATH=./logs/dev_guard.log

# Enable structured logging
STRUCTURED_LOGGING=false

# =============================================================================
# External Tool Configuration
# =============================================================================

# Goose CLI path (if not in PATH)
GOOSE_CLI_PATH=goose

# Git executable path (if not in PATH)
GIT_EXECUTABLE_PATH=git

# =============================================================================
# MCP Server Configuration
# =============================================================================

# MCP server port
MCP_SERVER_PORT=8080

# MCP server host
MCP_SERVER_HOST=localhost

# Enable MCP server
ENABLE_MCP_SERVER=true

# =============================================================================
# Repository Configuration
# =============================================================================

# Default branch for new repositories
DEFAULT_BRANCH=main

# Auto-commit changes (use with caution)
AUTO_COMMIT=false

# Auto-push changes (use with caution)
AUTO_PUSH=false

# Maximum file size to process (in MB)
MAX_FILE_SIZE_MB=10

# Repository scan depth
REPO_SCAN_DEPTH=10